{{#if addNewPost}}
  <h1>New Post</h1>
  <form class="form-horizontal" id="" action="" method="">
    <fieldset>
      <legend>NewPosts</legend>
      <div class="form-group">
        <label for="user" class='col-lg-2' control-label>UserName</label>
        <div class="col-lg-10">
          {{input value=user id="user"}}
          <!-- <input type="text" class="form-control" id="inputUserName" placeholder="name"> -->
        </div>
      </div>
      <div class="form-group">
        <label for="title" class='col-lg-2' control-label>Title</label>
        <div class="col-lg-10">
          {{input value=title id="title"}}
          <!-- <input type="text" class="form-control" id="inputUserName" placeholder="name"> -->
        </div>
      </div>
      <div class="form-group">
        <label for="image" class='col-lg-2' control-label>Image URL</label>
        <div class="col-lg-10">
          {{input value=image id="image"}}
        </div>
      </div>
      <div class="form-group">
        <label for="blogPost" class="col-lg-2 control-label">Textarea</label>
        <div class="col-lg-10">
          <textarea class="form-control" rows="3" id="textArea">
            {{input value=blogPost id="blogPost"}}
          </textarea>
        </div>
      </div>
      <button class="btn btn-default" {{action 'save'}}>Save</button>
    </fieldset>
  </form>

{{else}}
  <button class="btn btn-success" {{action 'postFormShow'}}>New Post</button>
{{/if}}
