<li>{{post.user}} posted: {{post.title}}
  {{#if isImageShowing}}
    <p><img src="{{post.image}}" alt="{{post.topic}}" {{action 'imageHide'}}/></p>
  {{else}}
    <button class="btn btn-primary" {{action 'imageShow'}}>ShowImage</button>
  {{/if}}
    {{update-post post=post update="update"}}
    <button class="btn btn-warning" {{action 'delete' post}}>DeletePost</button>
</li>
